<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_margin="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            style="@style/Medium16ACADB9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Continue With Accounts" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <TextView
                style="@style/GoogleStyeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_ground_google_button"
                android:gravity="center"
                android:text="GOOGLE" />

            <View
                android:layout_width="14dp"
                android:layout_height="match_parent" />

            <TextView
                style="@style/FacebookStyeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_ground_facebook_button"
                android:gravity="center"
                android:text="FACEBOOK" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginBottom="35dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:gravity="center|top">

            <TextView
                style="@style/Medium16ACADB9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create New Account?" />

            <TextView
                android:id="@+id/sign_up_button_next_screen"
                style="@style/SemiBold16Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Sign up" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C2C3CB" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="120dp"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Bold34Black"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_gravity=""
            android:text="Login Your\nAccount" />

        <EditText
            style="@style/Medium14Black"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/background_edit_text"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="23dp"
            android:hint="Enter Your Email"
            android:paddingHorizontal="25dp" />

        <EditText
            android:id="@+id/edit_text_password"
            style="@style/Medium14Black"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/background_edit_text"
            android:drawableLeft="@drawable/lock_icon"
            android:drawableRight="@drawable/eye_off_icon"
            android:drawablePadding="23dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="25dp" />

        <TextView
            android:id="@+id/forget_password_next_screen"
            style="@style/Medium14forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="14dp"
            android:text="Forget Password ?" />

        <TextView
            style="@style/Bold18000000"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/primary_background_button"
            android:gravity="center"
            android:text="Login" />

    </LinearLayout>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/background_edit_text"
        android:padding="16dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>